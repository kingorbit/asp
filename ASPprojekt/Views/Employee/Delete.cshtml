@model ASPprojekt.Models.Employee

<h1>Usuń</h1>

<h3>Jesteś pewny, że chcesz usunąć tego pracownika?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">First Name</dt>
        <dd class="col-sm-10">@Model.FirstName</dd>
        <dt class="col-sm-2">Last Name</dt>
        <dd class="col-sm-10">@Model.LastName</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">Position</dt>
        <dd class="col-sm-10">@Model.Position</dd>
    </dl>

    @if (ViewBag.HasAssignmentOrders == true)
    {
        <div class="alert alert-danger" role="alert">
            Ten pracownik aktualnie wykonuje zlecenie. Nie można go usunąć!
        </div>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Powrót</a>
    }
    else
    {
        using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions">
                <input type="submit" value="Usuń" class="btn btn-danger" />
                <a href="@Url.Action("Index")" class="btn btn-secondary">Powrót</a>
            </div>
        }
    }

</div>
